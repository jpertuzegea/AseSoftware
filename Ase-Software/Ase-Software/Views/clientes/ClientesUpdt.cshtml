@model Ase_Software.Models.cliente

@{
    Layout = null;
}

@using (Html.BeginForm("ClientesUpdt", "Clientes", FormMethod.Post, new { onsubmit = "return  validar_doble_clic()" }))
{ // el return indica que la accion del formulario llega false cuando ya le han dado clic una vez
    @Html.HiddenFor(model => model.cliente_id)


    @Html.AntiForgeryToken()
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 style="color:#1ab394" class="modal-title">Formulario de Modificacion de Clientes</h4>
    </div>

    <div class="modal-body">
        <div class="row">
            <div class="col-sm-6 b-r">
                <h3 class="m-t-none m-b"></h3>

                <div class="form-group">
                    <label>Identificacion </label>
                    @Html.EditorFor(model => model.num_identificacion, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>

                <div class="form-group">
                    <label>Nombre Completo </label>
                    @Html.EditorFor(model => model.nombre_completo, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>

                <div class="form-group">
                    <label>Sexo</label>
                    @Html.DropDownList("sexo", null, htmlAttributes: new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Telefono</label>
                    @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>

                <div class="form-group">
                    <label>Estado </label>
                    @Html.DropDownList("estado", null, htmlAttributes: new { @class = "form-control" })
                </div>

            </div>

            <div class="col-sm-6 ">
                <br>
                <div class="form-group">
                    <label>Direccion</label>
                    @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>

                <div class="form-group">
                    <label>Ciudad</label>
                    @Html.EditorFor(model => model.ciudad, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>

                <div class="form-group">
                    <label>Email</label>
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>
            </div>
            <div class="col-sm-4 ">      </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" id="boton" type="submit"><strong>Modificar</strong></button>
    </div>
}
