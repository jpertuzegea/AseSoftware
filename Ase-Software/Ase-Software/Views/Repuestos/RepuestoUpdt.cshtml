@model Ase_Software.Models.repuesto

@{
    Layout = null;
}

@using (Html.BeginForm("RepuestoUpdt", "Repuestos", FormMethod.Post, new { onsubmit = "return  validar_doble_clic()" }))
{ // el return indica que la accion del formulario llega false cuando ya le han dado clic una vez


    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.repuesto_id)

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 style="color:#1ab394" class="modal-title">Formulario de Modificacion de Repuestos</h4>
    </div>

    <div class="modal-body">
        <div class="row">
            <div class="col-sm-6 b-r">
                <h3 class="m-t-none m-b"></h3>


                <div class="form-group">
                    <label>Nombre Repuesto</label>
                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>

                <div class="form-group">
                    <label>Marca </label>
                    @Html.EditorFor(model => model.marca, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>

                <div class="form-group">
                    <label>Precio Unidad</label>
                    @Html.EditorFor(model => model.precio_unidad, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>
                <div class="form-group">
                    <label>Stock</label>
                    @Html.EditorFor(model => model.stock, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>


            </div>

            <div class="col-sm-6 ">
                <br>

            </div>
            <div class="col-sm-4 ">      </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" id="boton" type="submit"><strong>Modificar</strong></button>
    </div>
}

