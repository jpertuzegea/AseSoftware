@model IEnumerable<Ase_Software.Models.servicio>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <br>

        <a data-toggle="modal" class="btn btn-primary" onclick="crear_servicio()" id="btn_nuevo_servicio" href="#myModal2">Nuevo Servicio</a>

    </div>

    <div class="col-lg-2">
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5 align="center">Listado de Servicios Existentes en el Sistema</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">
                    <div class="table-responsive">

                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>
                                        Vehiculo
                                    </th>
                                    <th>
                                        Daño
                                    </th>
                                    <th>
                                        Mecanico
                                    </th>
                                    <th>
                                        Presupuesto Arreglo
                                    </th>

                                    <th>
                                        Estimacion Precio
                                    </th>
                                    <th>
                                        Precio Final
                                    </th>
                                    <th>
                                        Foto
                                    </th>

                                    <th>
                                        Estado
                                    </th>

                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.vehiculo.modelo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.descripcion_danno)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.mecanico.nombre_completo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.presupuesto_arreglo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.estimacion_precio)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.precio_mano_obra)
                                    </td>
                                    <td>
                                        <img width="100" height="100" src="@Url.Action("convertirImagen", "Servicios", new { servicio_id = item.servicio_id})" />
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.estado)
                                    </td>


                                    <td>
                                        <a href="#myModal2" onclick="modi_servicio(this.id)" data-toggle="modal" title="Editar Servicio" id="@item.servicio_id"><i class="fa fa-edit"></i></a>
                                    </td>
                                    <td>
                                        <a href="#myModal2" onclick="Repu_servicio(this.id)" data-toggle="modal" title="Agregar Repuestos al servicio" id="@item.servicio_id"><i class="fa fa-ambulance"></i></a>
                                    </td>
                                    <td>
                                        <a href="#myModal2" onclick="factura_servicio(this.id)" data-toggle="modal" title="Detalle Factura Servicio"  id="@item.servicio_id"><i class="fa fa-address-book-o"></i></a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>
                                        Vehiculo
                                    </th>
                                    <th>
                                        Daño
                                    </th>
                                    <th>
                                        Mecanico
                                    </th>
                                    <th>
                                        Presupuesto Arreglo
                                    </th>

                                    <th>
                                        Estimacion Precio
                                    </th>
                                    <th>
                                        Precio Final
                                    </th>
                                    <th>
                                        Foto
                                    </th>
                                    <th>
                                        Estado
                                    </th>
                                    <th></th>
                                    <th></th>
                                    <th></th>

                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
