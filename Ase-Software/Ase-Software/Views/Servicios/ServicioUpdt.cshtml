@model Ase_Software.Models.servicio

@{
    Layout = null;
    
}

@using (Html.BeginForm("ServicioUpdt", "Servicios", FormMethod.Post, new { onsubmit = "return  validar_doble_clic()", enctype = "multipart/form-data" }))
{ // el return indica que la accion del formulario llega false cuando ya le han dado clic una vez


    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.servicio_id)

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 style="color:#1ab394" class="modal-title">Formulario de Modificacion de Servicios</h4>
    </div>

    <div class="modal-body">
        <div class="row">
            <div class="col-sm-6 b-r">
                <h3 class="m-t-none m-b"></h3>

                <div class="form-group">
                    <label>Vehiculo</label>
                    @Html.DropDownListFor(x => x.vehiculo_id, (IEnumerable<SelectListItem>)ViewBag.Vehiculo, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Descripcion Daño</label>
                    <textarea id="descripcion_danno" name="descripcion_danno" class="form-control required valid" aria-required="true" aria-invalid="false" style="margin: 0px -19px 0px 0px; height: 68px; width: 250px;"></textarea>
                </div>
                <div class="form-group">
                    <label>Mecanico</label>
                    @Html.DropDownListFor(x => x.mecanico_id, (IEnumerable<SelectListItem>)ViewBag.Mecanico, htmlAttributes: new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Presupuesto Arreglo</label>
                    @Html.EditorFor(model => model.presupuesto_arreglo, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>
                <div class="form-group">
                    <label>Estimacion Horas</label>
                    @Html.EditorFor(model => model.estimacion_tiempo_hrs, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>


            </div>

            <div class="col-sm-6 ">
                <br>

                <div class="form-group">
                    <label>Precio Mano Obra</label>
                    @Html.EditorFor(model => model.precio_mano_obra, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>
                
                <div class="form-group">
                    <label>Foto Actual</label>
                    <img width="250" height="250" src="@Url.Action("convertirImagen", "Servicios", new { servicio_id = Model.servicio_id })" />
                
                         </div>



                <div class="form-group">
                    <label>Foto</label>
                    <input class="form-control m-b" type="file" name="file" />
                </div>
                <div class="form-group">
                    <label>Estimacion Precio</label>
                    @Html.EditorFor(model => model.estimacion_precio, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control" } })
                </div>

                <div class="form-group">
                    <label>Estado </label>
                    @Html.DropDownList("estado", null, htmlAttributes: new { @class = "form-control" })
                </div>

            </div>
            <div class="col-sm-4 ">      </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" id="boton" type="submit"><strong>Modificar</strong></button>
    </div>
}
