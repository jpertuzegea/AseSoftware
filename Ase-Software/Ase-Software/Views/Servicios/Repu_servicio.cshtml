@model Ase_Software.Models.repuesto_servicio

@{
    Layout = null;
}

@using (Html.BeginForm("Repu_servicio", "Servicios", FormMethod.Post, new { onsubmit = "return  validar_doble_clic()", enctype = "multipart/form-data" }))
{ // el return indica que la accion del formulario llega false cuando ya le han dado clic una vez


    @Html.AntiForgeryToken()

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 style="color:#1ab394" class="modal-title">Formulario de Registro de Repuesto al Servicio</h4>
    </div>

    <div class="modal-body">
        <div class="row">
            <div class="col-sm-6 b-r">
                <h3 class="m-t-none m-b"></h3>
                <div class="form-group">
                    <label>Servicio # @ViewBag.servicio_id</label>
                    <input type="hidden" id="servicio_id" value="@ViewBag.servicio_id" />
                </div>

                <div class="form-group">
                    <label>Agregar Repuesto</label>
                    @Html.DropDownListFor(x => x.repuesto_id, (IEnumerable<SelectListItem>)ViewBag.repuestos, htmlAttributes: new { @class = "form-control" })
                </div>
                
            </div>

            <div class="col-sm-6 ">
                <br>



            </div>
            <div class="col-sm-4 ">      </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" id="boton" type="submit"><strong>Registrar</strong></button>
    </div>
}
