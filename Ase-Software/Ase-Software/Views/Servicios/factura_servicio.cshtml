@model Ase_Software.Models.Factura_detalle

@{
    Layout = null;
}

@Html.AntiForgeryToken()
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <h4 style="color:#1ab394" class="modal-title">Detalle Factura Servicio</h4>
</div>

<div class="modal-body">
    <div class="row">
        <div class="col-sm-6 b-r">
            <h3 class="m-t-none m-b"></h3>


            @*public List<repuesto>  repuestos_del_servicio { get; set; }*@

            <div class="form-group">
                <label>Mecanico</label>
                @Html.EditorFor(model => model.nombre_mecanico, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control", @disabled = "disabled" } })
            </div>
            <div class="form-group">
                <label>Cliente</label>
                @Html.EditorFor(model => model.nombre_cliente, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control", @disabled = "disabled" } })
            </div>
            <div class="form-group">
                <label>Valor Mano Obra</label>
                @Html.EditorFor(model => model.valor_mano_obra, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control", @disabled = "disabled" } })
            </div>
            <div class="form-group">
                <label>Valor Total</label>
                @Html.EditorFor(model => model.valor_total, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control", @disabled = "disabled" } })
            </div>
            <div class="form-group">
                <label>Iva</label>
                @Html.EditorFor(model => model.iva, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control", @disabled = "disabled" } })
            </div>
            <div class="form-group">
                <label>Fecha</label>
                @Html.EditorFor(model => model.fecha_emision, new { htmlAttributes = new { @onkeyup = "UpperCase(this)", @class = "form-control", @disabled = "disabled" } })
            </div>


        </div>

        <div class="col-sm-6 ">
            <br>

            <div class="ibox-content">
                <div class="table-responsive">

                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>Nombre Repuesto</th>
                                <th>Precio Unidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.repuestos_del_servicio)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.precio_unidad)
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Nombre Repuesto</th>
                                <th>Precio Unidad</th>

                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>


        </div>
        <div class="col-sm-4 ">      </div>
    </div>
</div>
<div class="modal-footer">
</div>
